import java.util.*;
class Main
{
    public static void main(String args[]) 
    {
        Scanner sc=new Scanner(System.in);
        int n,i;
        n=sc.nextInt();
        int arr[];
        arr=new int[] {2,5,8}; 
         n=arr[0];
        System.out.println("Enter array elements");
        for(i=0;i<n;i++) 
        {  
           if(arr[i]<n)  
               n=arr[i];  
        }  
        System.out.println("Smallest elements in array"+n);  
        }
        }

output:
Enter array elements
2 5 8
Smallest elements in array 2






